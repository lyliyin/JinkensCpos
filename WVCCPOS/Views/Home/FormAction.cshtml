section scripts{
    Scripts.Render("~/Scripts/FormAction")
    Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            jQuery.validator.addMethod("CheckUserName",
              function (value, element, params) {
                  return value != null
              }, "请输入用户名");

            $(".date-picker").datepicker({
                language: "zh-CN",
                autoclose: true,//选中之后自动隐藏日期选择框
                clearBtn: false,//清除按钮
                todayBtn: false,//今日按钮
                format: "yyyy-mm-dd"
            });
            $(".date-picker").datepicker("setDate", new Date());//设置

            $('#myModal1').modal('show');


            //图片
            $(".error-mark").click(function () {
                var index = $(this).parent().index();
                $(".images:eq(" + index + ")").remove();
                $(this).parent().remove();
            });

            //高亮显示框
            $.fn.toggleButtons.defaults.label.enabled = "男";
            $.fn.toggleButtons.defaults.label.disabled = "女";
        });
